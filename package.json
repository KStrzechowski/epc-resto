    "@nestjs/testing": "^10.3.0",
    "@types/app-root-path": "^1.2.4",
    "@types/cache-manager": "^3.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
