    "lint-staged": "^15.2.2",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.8.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.2.4",
